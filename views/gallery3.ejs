        </div>

        <div id="myModal" class="modal">
            <span class="close" onclick="closeModal()">&times;</span>
            <div class="modal-content">
              <img id="modalImage">
              <a class="prev2" onclick="plusSlides(-1)">&#10094;</a>
              <a class="next2" onclick="plusSlides(1)">&#10095;</a>
            </div>
        </div>

        <div class="page-change">
            <p><a href="/gallery#page1">1</a></p>
            <p><a href="/gallery2#page2">2</a></p>
            <p><a href="/gallery3#page3">3</a></p>
            <p><a href="/gallery2#page1">PREV</a></p>
        </div>

        <script>
            var slideIndex = 0;
            var modalImages = document.querySelectorAll('.gallery img');
            var modal = document.getElementById('myModal');
            var modalImg = document.getElementById('modalImage');
        
            function openModal(imagePath, index) {
              modal.style.display = 'block';
              modalImg.src = imagePath;
              slideIndex = index;
            }
        
            function closeModal() {  
              modal.style.display = 'none';
            }
        
            function plusSlides(n) {
              slideIndex += n;
              if (slideIndex >= modalImages.length) {
                slideIndex = 0;
              } else if (slideIndex < 0) {
                slideIndex = modalImages.length - 1;
              }
              modalImg.src = modalImages[slideIndex].src;
            }
        </script>

